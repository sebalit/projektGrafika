<Window x:Class="projektGrafika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projektGrafika"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="291*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="127*"/>
        </Grid.ColumnDefinitions>
        <ListBox HorizontalAlignment="Left" Width="169"
                 Name="pacjentList" ItemsSource="{Binding}" Margin="-1,9,0,282" SelectionChanged="pacjentList_SelectionChanged"/>
        <Button HorizontalAlignment="Left" Margin="207,100,0,0" VerticalAlignment="Top" Width="75">
            <Button Content="Odśwież" Width="75" Click="refreshButton_Click"
                    Name="refreshButton"/>
        </Button>
        <DataGrid HorizontalAlignment="Left" Height="477" Margin="514,10,0,0" VerticalAlignment="Top" Width="323"
            x:Name="dawkaGrid" ItemsSource="{Binding}"/>
        <Button Content="Dodaj" HorizontalAlignment="Left" Margin="207,145,0,0" VerticalAlignment="Top" Width="75"
            x:Name="addButton" Click="addButton_Click"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="49,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="255" Width="134"
                   Name="dawkaText" Text="{Binding}"/>
    </Grid>
</Window>
